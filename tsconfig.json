{
    "extends": "eslint-config-with-tsconfig/tsconfig.base.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "sourceMap": true,
        "isolatedModules": false,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "types": ["core-dts", "vite/client"]
