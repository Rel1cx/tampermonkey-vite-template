{
    "$schema": "https://docs.rome.tools/schemas/12.1.0/schema.json",
    "organizeImports": {
        "enabled": false
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentSize": 4,
        "lineWidth": 120
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded"
        }
    },
    "files": {
        "ignore": ["**/dist", "**/public", "**/node_modules", "**/*-lock.json", "pnpm-lock.yaml"]
    }
}
